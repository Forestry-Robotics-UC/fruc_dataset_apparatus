<?xml version="1.0"?>

<robot name="apparatus_box">

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link" > <!--REFERENCE FRAME FOR THE SENSOR BOX: TREE'S ROOT LINK-->
      <visual>      
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://urdf_tutorial/my_meshes/apparatus_box.stl" scale="1 1 1"/>
        </geometry>
        <material name="white"/>
      </visual>
  </link>  

<!-- APPARATUS LINKS -->

  <link name="base_apparatus" />
  <link name="xsens_link" />
  <link name="realsense_link" />
  <link name="mynt_bottom_screw_link" />
  <link name="mynt_link" />
  <link name="velarray_link" />
  <link name="antenna_link" />
 
  

<!-- JOINT DEFINITIONS -->

  <!-- CREATE THE BASE APPARATUS LINK-->
  <joint name="base_link_to_base_apparatus" type="fixed">
      <parent link="base_link" />
      <child link="base_apparatus"/>
      <origin xyz="0 0 0" rpy="0 0 -1.570796327" /> 
  </joint>
  

  <!-- XSENS LINK --> 
  <joint name="base_to_xsens" type="fixed">
    <parent link="base_apparatus"/>
    <child link="xsens_link"/>
    <origin xyz="-0.017534 -0.029827 0.015160" rpy="0 0 0" />
  </joint>


  <!-- REALSENSE LINK -->
  <joint name="base_to_realsense" type="fixed">
    <parent link="base_apparatus"/>
    <child link="realsense_link"/>
    <origin xyz="-0.045984 0.065623 0.0415" rpy="-1.570796327 0 0"/>
  </joint>


  <!-- MYNTEYE LINKS -->
  <joint name="base to_bottom_mynt_screw" type="fixed">
    <parent link="base_apparatus"/>
    <child link="mynt_bottom_screw_link"/>
    <origin xyz="-0.031088 0.014078 0.146" rpy="0 0 0.802851456"/>
  </joint>

  <joint name="mynt_screw_to_mynt_frame" type="fixed">
    <parent link="mynt_bottom_screw_link"/>
    <child link="mynt_link"/>
    <origin xyz="-0.059939 0.005 0.014600" rpy="0 0 0"/>
  </joint>


  <!-- VELARRAY LINK -->
  <joint name="base_to_velarray" type="fixed">
    <parent link="base_apparatus"/>
    <child link="velarray_link"/>
    <origin xyz="0.041541 0.072093 0.269396" rpy="0 0 0"/>
  </joint>


    <!-- ANTENNA LINK -->
  <joint name="base_to_antenna" type="fixed">
    <parent link="base_apparatus"/>
    <child link="antenna_link"/>
    <origin xyz="-0.002106 -0.036673 0.3549896" rpy="0 0 0"/>
  </joint>

</robot>